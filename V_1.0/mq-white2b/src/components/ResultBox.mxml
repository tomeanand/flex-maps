<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/halo"
		 width="100%"
		 height="100">

	<fx:Script>
		<![CDATA[
			import com.aol.mq.ptype.controller.MapManger;
			import com.aol.mq.ptype.events.WinstonEvent;
			protected function btn_clickHandler(event:MouseEvent):void
			{

				this.height=(this.height == 100 ? 400 : 100)

			}

			protected function btn0_clickHandler(event:MouseEvent):void
			{
				MapManger.getInstance().dispatchEvent(new WinstonEvent("close",this));
			}

		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Border width="100%"
			  height="100%"
			  cornerRadius="10"
			  backgroundColor="#CCEEDD"
			  borderAlpha=".2">
		<s:Button id="btn"
				  label="Collapse"
				  click="btn_clickHandler(event)"/>
		<s:Button id="btn0"
				  label="Remove"
				  x="130" y="0" click="btn0_clickHandler(event)"/>
	</s:Border>
</s:Group>

